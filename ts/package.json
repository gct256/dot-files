{
  "scripts": {
    "start": "webpack-serve --config webpack.config.js --content dist --port 3000",
    "build": "webpack --config webpack.config.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "serve": "browser-sync --config bs-config.js start"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
