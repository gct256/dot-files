{
  "scripts": {
    "start": "webpack-serve --config webpack.config.js --content dist --port 3000",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}